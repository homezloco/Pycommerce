modules = ["python-3.11", "python3"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
run = ["gunicorn", "--bind", "0.0.0.0:5000", "main:app"]

[workflows]

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:5000 --reuse-port --reload main:app"
waitForPort = 5000

[[workflows.workflow]]
name = "Run migrations"
author = 34384132
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DATABASE_URL=sqlite:///pycommerce.db"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "alembic upgrade head"

[[workflows.workflow]]
name = "Run with SQLite"
author = 34384132
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DATABASE_URL=sqlite:///pycommerce.db"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[workflows.workflow]]
name = "Run with migrations"
author = 34384132
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export DATABASE_URL=sqlite:///pycommerce.db"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "alembic upgrade head"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

[[ports]]
localPort = 5000
externalPort = 80
