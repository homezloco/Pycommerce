args = "export DATABASE_URL=$(printenv REPLIT_DB_URL 2>/dev/null || echo \"postgresql://postgres:postgres@localhost:5432/pycommerce\")"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "alembic upgrade head"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"

