                    </li>
                </ul>
                
                {% if tenants %}
                <div class="dropdown mt-3 w-100">
                    <button class="btn btn-secondary btn-sm dropdown-toggle w-100" type="button" id="storeDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        {% if selected_tenant %}
                            <span>{{ selected_tenant }}</span>
                        {% else %}
                            <span>Select Store</span>
                        {% endif %}
                    </button>
                    <ul class="dropdown-menu dropdown-menu-dark w-100" aria-labelledby="storeDropdown">
                        {% for tenant in tenants %}
                        <li>
                            <a class="dropdown-item {% if selected_tenant == tenant.slug %}active{% endif %}" 
                               href="/admin/change-store?tenant={{ tenant.slug }}&redirect={{ request.url.path }}">
                                {{ tenant.name }}
                            </a>
                        </li>
                        {% endfor %}
                    </ul>
                </div>
                {% endif %}
            </div>
        </div>
        
        <!-- Content Area -->
        <div class="col py-3">
            {% block admin_content %}{% endblock %}
        </div>
    </div>
</div>
{% endblock %}
